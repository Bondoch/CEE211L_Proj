<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.triage.controllers.ReferralPopupController"
           style="-fx-background-color: rgba(0,0,0,0.35);">
    <VBox spacing="14"
          alignment="TOP_CENTER"
          prefWidth="360"
          maxWidth="360"

          prefHeight="220"
          minHeight="220"
          maxHeight="220"
          style="
        -fx-background-color: white;
        -fx-background-radius: 18;
        -fx-padding: 24;
        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0, 0, 5);
      "
          >

        <Label text="Request Referral"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <ComboBox fx:id="facilityBox"
                  promptText="Target Facility"
                  maxWidth="Infinity"/>

        <ComboBox fx:id="floorBox"
                  promptText="Target Floor"
                  maxWidth="Infinity"/>

        <Label fx:id="errorLabel"
               visible="false"
               managed="false"
               text="Please select both a target facility and floor."
               style="
           -fx-text-fill: #ff6b6b;
           -fx-font-size: 11px;
           -fx-font-weight: bold;
       "/>


        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#cancel"/>
            <Button text="Submit Request"
                    onAction="#submit"
                    style="-fx-background-color: #2ca3fa; -fx-text-fill: white;"/>
        </HBox>
    </VBox>


</StackPane>

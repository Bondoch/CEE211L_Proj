<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.triage.controllers.LoginController"
            prefWidth="1000" prefHeight="650"
            style="-fx-background-color: #E9F2FA;"> <!-- soft subtle blue -->

    <!-- LEFT LOGIN SECTION -->
    <VBox layoutX="80" layoutY="120" spacing="25">

        <!-- TITLE -->
        <Text text="Triage System Login"
              style="-fx-font-size: 32px;
                     -fx-font-weight: bold;
                     -fx-fill: #034C81;" />  <!-- Navy blue -->

        <!-- LOGIN CARD -->
        <VBox spacing="18"
              style="-fx-background-color: #FFFFFF;
                     -fx-background-radius: 10;
                     -fx-border-radius: 10;
                     -fx-border-color: #034C81;   /* navy border */
                     -fx-border-width: 0 0 0 5;   /* left accent bar */
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 18, 0, 0, 4);">

            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>

            <!-- USERNAME -->
            <TextField fx:id="usernameField"
                       promptText="Username"
                       prefHeight="40" maxWidth="300"
                       style="-fx-background-color: #F7F7F7;
                              -fx-border-color: #7F858C;
                              -fx-border-radius: 6;
                              -fx-background-radius: 6;" />

            <!-- PASSWORD -->
            <PasswordField fx:id="passwordField"
                           promptText="Password"
                           prefHeight="40" maxWidth="300"
                           style="-fx-background-color: #F7F7F7;
                                  -fx-border-color: #7F858C;
                                  -fx-border-radius: 6;
                                  -fx-background-radius: 6;" />

            <!-- LOGIN BUTTON -->
            <Button text="Login"
                    onAction="#onLoginButtonClick"
                    prefWidth="160" prefHeight="45"
                    style="-fx-background-color: #2CA3FA;
                           -fx-text-fill: white;
                           -fx-font-size: 16px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 8;" />

            <!-- ERROR LABEL -->
            <Label fx:id="errorLabel"
                   textFill="#D9534F"
                   style="-fx-font-size: 14px;" />

        </VBox>

    </VBox>

</AnchorPane>
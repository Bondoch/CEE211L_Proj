<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.triage.controllers.LoginController"
            prefHeight="400.0" prefWidth="600.0">

    <children>

        <VBox alignment="CENTER" spacing="15" layoutX="250" layoutY="150">

            <Text text="Triage System Login" style="-fx-font-size: 28px; -fx-font-weight: bold;" />

            <TextField fx:id="usernameField" promptText="Username" prefWidth="300" />
            <PasswordField fx:id="passwordField" promptText="Password" prefWidth="300" />

            <Button fx:id="loginButton" text="Login" prefWidth="150" onAction="#onLoginButtonClick" />

            <Label fx:id="errorLabel" textFill="red" style="-fx-font-size: 14px;" />

        </VBox>

    </children>

</AnchorPane>

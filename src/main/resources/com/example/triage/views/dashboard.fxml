<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.triage.controllers.DashboardController"
            stylesheets="@dashboard.css"
            prefWidth="900" prefHeight="600">

    <!-- ========== TOP BAR ========== -->
    <HBox prefHeight="50" prefWidth="900"
          style="-fx-background-color: #34495E;">
        <Button fx:id="menuButton"
                onAction="#toggleSidebar"
                style="-fx-background-color: transparent;">
            <graphic>
                <FontIcon iconLiteral="fas-bars" iconSize="24" iconColor="white"/>
            </graphic>
        </Button>

        <Label text="Dashboard"
               style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"
               layoutX="60" layoutY="15"/>
    </HBox>

    <!-- ========== MAIN CONTENT AREA ========== -->
    <AnchorPane fx:id="contentArea"
                layoutY="50"
                prefWidth="900" prefHeight="550"
                style="-fx-background-color: #ECF0F1;" />

    <!-- ========== DARK OVERLAY (FADES IN WHEN MENU OPENS) ========== -->
    <Pane fx:id="overlay"
          layoutY="50"
          prefWidth="900" prefHeight="550"
          visible="false"
          style="-fx-background-color: rgba(0, 0, 0, 0.4);" />

    <!-- ========== SIDEBAR ========== -->
    <VBox fx:id="sidebar"
          prefWidth="200" prefHeight="600"
          layoutX="-200" layoutY="50"
          spacing="0"
          style="-fx-background-color: #2C3E50;">

        <Label text="Menu"
               style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;
                  -fx-padding: 20 0 10 20;" />

        <HBox fx:id="itemDashboard" styleClass="menu-item" maxWidth="Infinity" style="-fx-padding: 15 20;">
            <Label text="Dashboard" styleClass="menu-text"/>
        </HBox>

        <HBox fx:id="itemPatients" styleClass="menu-item" maxWidth="Infinity" style="-fx-padding: 15 20;">
            <Label text="Patients" styleClass="menu-text"/>
        </HBox>

        <HBox fx:id="itemFacilities" styleClass="menu-item" maxWidth="Infinity" style="-fx-padding: 15 20;">
            <Label text="Facilities" styleClass="menu-text"/>
        </HBox>

        <HBox fx:id="itemStaff" styleClass="menu-item" maxWidth="Infinity" style="-fx-padding: 15 20;">
            <Label text="Staff Accounts" styleClass="menu-text"/>
        </HBox>

        <HBox fx:id="itemSettings" styleClass="menu-item" maxWidth="Infinity" style="-fx-padding: 15 20;">
            <Label text="Settings" styleClass="menu-text"/>
        </HBox>

    </VBox>

</AnchorPane>